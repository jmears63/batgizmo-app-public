<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- declare to the App Store that this app can use USB, but doesn't require it. -->
    <uses-feature android:name="android.hardware.usb.host" android:required="false" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="org.batgizmo.app.BatGizmoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_batgizmo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_batgizmo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BatgizmoApp"
        tools:targetApi="31" >

        <!-- profileable android:enabled="true" /-->        <!-- included in debug builds -->

        <!-- singleTask guarantees that only once instance is running at once: -->
        <activity
            android:name="org.batgizmo.app.MainActivity"
            android:hardwareAccelerated="true"
            android:exported="true"
            android:theme="@style/Theme.BatgizmoApp"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Handle file viewing -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" android:mimeType="audio/wav" />
                <data android:scheme="content" android:mimeType="audio/x-wav" />
                <data android:scheme="content" android:mimeType="audio/vnd.wave" />
                <data android:scheme="file" android:mimeType="audio/wav" />
                <data android:scheme="file" android:mimeType="audio/x-wav" />
                <data android:scheme="file" android:mimeType="audio/vnd.wave" />
            </intent-filter>

            <!-- Handle URL opening -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:mimeType="audio/wav" />
                <data android:scheme="https" android:mimeType="audio/wav" />
                <data android:scheme="http" android:mimeType="audio/x-wav" />
                <data android:scheme="https" android:mimeType="audio/x-wav" />
                <data android:scheme="http" android:mimeType="audio/vnd.wave" />
                <data android:scheme="https" android:mimeType="audio/vnd.wave" />
                <data android:scheme="file" android:mimeType="audio/wav" />
                <data android:scheme="file" android:mimeType="audio/x-wav" />
                <data android:scheme="file" android:mimeType="audio/vnd.wave" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>